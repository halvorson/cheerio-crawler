

<div class="container-fluid">
  <header class="row">
    <div class="logo col-sm-2">
      <img src="/assets/img/google.png" alt="Google">
    </div><!-- logo -->

    <div class="search-bar col-sm-6">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for...">
        <span class="input-group-btn">
          <button class="btn btn-main">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div><!-- /input-group -->

      <span class="arrow caret"></span>
    </div><!-- search-bar -->

    <div class="profile col-sm-4">
      <ul class="profile-icons list-inline pull-right">
        <li>Michael</li>
        <li>
          <span class="glyphicon glyphicon-th"></span>
        </li>
        <li class="bell">
          <span class="glyphicon glyphicon-bell"></span>
        </li>
        <li>
          <img src="/assets/img/headshot.jpeg" width="30px" height="30px" class="img-circle">
        </li>
      </ul>
    </div><!-- profile -->
  </header>

  <div class="control-bar row">
    <div class="menu col-sm-2">
      Gmail
      <span class="caret"></span>
    </div><!-- menu -->

    <div class="controls col-sm-10">
      <ul class="control-list list-inline">
        <li>
          <button class="btn btn-control" id="backButton">
            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
          </button>
        </li>
        <li>
          <div class="btn-group">
            <button class="btn btn-control">
              <i class="fa fa-archive" aria-hidden="true"></i>
            </button>

            <button class="btn btn-control" id="">
              <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            </button>
            <button class="btn btn-control">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>

          </div>
        </li>
        <li>
          <span class="btn-group">
            <button class="btn btn-control">
              <i class="fa fa-folder" aria-hidden="true"></i>
              <span class="caret"></span>
            </button>

            <button class="btn btn-control">
              <i class="fa fa-tag" aria-hidden="true"></i>
              <span class="caret"></span>
            </button>
          </span>
        </li>
        <li>
          <button class="text-btn btn btn-control">
            <strong>More</strong>
            <span class="caret"></span>
          </button>
        </li>
      </ul>
    </div><!-- controls -->
  </div><!-- control-bar -->

  <div class="mail row">
    <div class="sidebar col-sm-2">
      <button class="compose btn btn-danger">
        Compose
      </button>

      <ul class="inbox-sections list-unstyled">
        <li class="active">
          Inbox (100)
        </li>
        <li>Sent Mail</li>
        <li class="pending">
          Drafts (7)
        </li>
        <li>All Mail</li>
        <li class="pending">
          Spam (1)
        </li>
      </ul>
    </div><!-- sidebar -->

    <div class="email col-sm-10">
      <div class="row">
        <div class="col-sm-9">
          <div class="row">
            <div class="col-sm-12" id="emailBody">
              <h4>{{this.title}}</h4>
              <hr>

            </div>
            <div class="col-sm-12">
              <hr>
            </div>
            <div class="col-sm-12" id="commentsHolder">
              {{#each this.notes}}
              <div class="row commentDiv">
                <div class="col-sm-1">
                  <img src="/assets/img/headshot.jpeg" width="30px"></img>
                </div>
                <div class="col-sm-11 commentTextHolder">
                  <p class="commentText">{{this.body}}
                    <button class="btn btn-danger deleteCommentButton pull-right" data-comment-id="{{this._id}}" onclick="deleteComment(this,event)">
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                  </p>

                </div>
                <div class="col-sm-12">
                  <hr>
                </div>
              </div>
              {{/each}}
{{!--               <div class="row commentDiv">
                <div class="col-sm-1">
                  <img src="/assets/img/headshot.jpeg" width="30px"></img>
                </div>
                <div class="col-sm-11 commentTextHolder">
                  <p class="commentText">This is what a comment will look like</p>
                </div>
                <div class="col-sm-12">
                  <hr>
                </div>
              </div> --}}

              <div class="row">
                <div class="col-sm-1">
                  <img src="/assets/img/headshot.jpeg" width="30px"></img>
                </div>
                <div class="col-sm-11" id="newCommentDiv">
                  <form action="/submit" method="post">
                    <textarea id="newCommentText" name="body" placeholder="Comment here..."></textarea>
                    <input type="hidden" name="articleId" value="{{this._id}}"></input>
                    <div class="btn-group" id="newCommentButtonBar">
                      <button class="btn btn-control" id="newCommentButton">
                        <p>Submit</p>
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div><!-- email -->
  </div><!-- mail -->
</div>

